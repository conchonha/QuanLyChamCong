<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/br11"
    android:orientation="vertical"
    tools:context=".fragment.BaoCaoNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bao_cao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Xem Báo Cáo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/them" />

        <Button
            android:id="@+id/bieudo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Xem thành tích"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/them_data" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_quanly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/Size"
        android:text="Báo Cáo"
        android:textColor="@color/color_app"
        android:textSize="@dimen/Size"
        android:textStyle="bold" />

</RelativeLayout>